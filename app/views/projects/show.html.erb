<div id="post_show_content" class="skinny_wrapper wrapper_padding">
 		<header>
 			 <p class="date"><%= @project.created_at.strftime('%A, %b %d') %></p>
 			 <h1><%= @project.title %></h1>
 			 <hr>
 		</header>


 		<div id="content">
 			<%= markdown @project.description %>

 			<style type="text/css">
 				.project_button {
   					 background: #8bc6db;
    				color: white;
   				 	text-decoration: none;
    				padding: 1em 2em;
					}
				.button_wrapper {
    				margin: 4em 0 0 0;
    				text-align: center;

					}
 			</style>
 			<div class="button_wrapper">
 				<a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %>
 				</a>
 			</div>

	<style>
		#admin_links{
	border-top: 1px solid #E9E9E9;
	border-bottom: 1px solid #E9E9E9;
	text-align: center;
	padding: 1em 0;
	margin: 3em 0;
		}
	a {
		color: #9a9da4;
		margin: 0 1em;
		font-weight: bold;
		font-size: .8em;
		text-transform: uppercase;
		text-decoration: none;
		}
	}
	</style>
	<% if user_signed_in? %>
	<div id="admin_links">
	<%= link_to "Edit", edit_project_path(@project) %> 
	<%= link_to "Delete",
	project_path(@project), data: { turbo_method: :delete, turbo_confirm: "Are you
	sure?" } %>
		
	</div>
	<% end %>
 		</div>
 	</div>
 
 	<hr style="width:50px; margin: auto;" />
 	
</div>